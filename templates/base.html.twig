{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}TasksPlus{% endblock %}</title>

        {# Bootstrap CSS via CDN (para o grid e algumas utilidades) #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

        {# SEU CSS PRINCIPAL: app.css (com todos os estilos do Figma) #}
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">

        {# Se você estiver usando Webpack Encore para outros assets, descomente (ex: {{ encore_entry_link_tags('app') }}) #}
    </head>
    <body>
        {# Cabeçalho principal #}
        <header class="main-header">
            <nav class="main-nav">
                <a href="{{ path('app_task_index') }}" class="nav-brand">TasksPlus</a>
                <div class="nav-links">
                    {% if app.user %}
                        <a href="{{ path('app_task_index') }}" class="nav-item">Tarefas</a>
                        <a href="{{ path('app_group_index') }}" class="nav-item">Grupos</a>
                        <a href="{{ path('app_logout') }}" class="nav-button">Sair ({{ app.user.userIdentifier }})</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-button">Login</a>
                    {% endif %}
                </div>
            </nav>
        </header>

        {# Mensagens Flash #}
        <div class="content-wrapper">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-message flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {# Conteúdo da Página #}
        {% block body %}{% endblock %}

        {# Rodapé Principal #}
        <footer class="main-footer">
            <p>&copy; {{ "now"|date("Y") }} TasksPlus. Todos os direitos reservados.</p>
        </footer>

        {# Bootstrap JS via CDN #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        {# Se você estiver usando Webpack Encore para outros scripts, descomente (ex: {{ encore_entry_script_tags('app') }}) #}
    </body>
</html>